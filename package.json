{
  "name": "hazon",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist/main.cjs",
  "author": {
    "name": "Leveq",
    "url": "https://github.com/Leveq"
  },
  "description": "A modern, open-source screenwriting application",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Leveq/Hazon"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:5173 && npm run build-electron && electron dist/main.cjs",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "node scripts/build-electron.js",
    "build-electron": "node scripts/build-electron.js",
    "start": "electron dist/main.cjs",
    "seed": "npx tsx scripts/seedData.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.leveq.hazon",
    "productName": "Hazon",
    "copyright": "Copyright Â© 2026 Leveq",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "!node_modules/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "Leveq",
      "repo": "Hazon"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build",
      "category": "Office"
    }
  },
  "dependencies": {
    "@sentry/electron": "^7.7.1",
    "dotenv": "^17.2.3",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "framer-motion": "^12.6.3",
    "lowdb": "^7.0.1",
    "pdfkit": "^0.17.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.5.0",
    "uuid": "^11.1.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@playwright/test": "^1.58.1",
    "@tailwindcss/vite": "^4.1.3",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/pdfkit": "^0.17.4",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.1.3",
    "electron-builder": "^26.4.0",
    "esbuild": "^0.25.2",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "jsdom": "^27.4.0",
    "playwright": "^1.58.1",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.3",
    "tsx": "^4.21.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^6.2.0",
    "vitest": "^4.0.18",
    "wait-on": "^8.0.3"
  }
}
